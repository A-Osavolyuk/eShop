{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Configuration": {
      "type": "object",
      "properties": {
        "Security": {
          "type": "object",
          "properties": {
            "Authentication": {
              "type": "object",
              "properties": {
                "Providers": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "properties": {
                        "ClientId": {
                          "type": "string"
                        },
                        "ClientSecret": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "ClientId",
                        "ClientSecret"
                      ]
                    }
                  }
                },
                "JWT": {
                  "type": "object",
                  "properties": {
                    "Key": {
                      "type": "string"
                    },
                    "Audience": {
                      "type": "string"
                    },
                    "Issuer": {
                      "type": "string"
                    },
                    "ExpirationSeconds": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "Key",
                    "Audience",
                    "Issuer",
                    "ExpirationSeconds"
                  ]
                }
              }
            },
            "Authorization": {
              "type": "object",
              "properties": {
                "Policies": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "properties": {
                        "Name": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Name"
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "Storage": {
          "type": "object",
          "properties": {
            "Databases": {
              "type": "object",
              "properties": {
                "SQL": {
                  "type": "object",
                  "properties": {
                    "MSSQL": {
                      "type": "object",
                      "properties": {
                        "ConnectionString": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "ConnectionString"
                      ]
                    },
                    "PostgreSQL": {
                      "type": "object",
                      "properties": {
                        "ConnectionString": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "ConnectionString"
                      ]
                    },
                    "SQLite": {
                      "type": "object",
                      "properties": {
                        "ConnectionString": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "ConnectionString"
                      ]
                    }
                  }
                },
                "NoSQL": {
                  "type": "object",
                  "properties": {
                    "Mongo": {
                      "type": "object",
                      "properties": {
                        "ConnectionString": {
                          "type": "string"
                        },
                        "DatabaseName": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "ConnectionString",
                        "DatabaseName"
                      ]
                    }
                  }
                }
              }
            },
            "Azure": {
              "type": "object",
              "properties": {
                "ConnectionString": {
                  "type": "string"
                },
                "Containers": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": "string"
                    }
                  }
                }
              },
              "required": [
                "ConnectionString",
                "Containers"
              ]
            }
          }
        },
        "Services": {
          "type": "object",
          "properties": {
            "Cache": {
              "type": "object",
              "properties": {
                "Redis": {
                  "type": "object",
                  "properties": {
                    "ConnectionString": {
                      "type": "string"
                    },
                    "InstanceName": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "ConnectionString",
                    "InstanceName"
                  ]
                }
              }
            },
            "MessageBus": {
              "type": "object",
              "properties": {
                "RabbitMQ": {
                  "type": "object",
                  "properties": {
                    "Password": {
                      "type": "string"
                    },
                    "UserName": {
                      "type": "string"
                    },
                    "HostUri": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "Password",
                    "UserName",
                    "HostUri"
                  ]
                },
                "Kafka": {
                  "type": "object",
                  "properties": {
                    "BootstrapServer": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "BootstrapServer"
                  ]
                }
              }
            },
            "Grpc": {
              "type": "object",
              "properties": {
                "Servers": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "properties": {
                        "Uri": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Uri"
                      ]
                    }
                  }
                }
              }
            },
            "Proxy": {
              "type": "object",
              "properties": {
                "Gateway": {
                  "type": "object",
                  "properties": {
                    "Uri": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "Uri"
                  ]
                }
              }
            },
            "SMTP": {
              "type": "object",
              "properties": {
                "Email": {
                  "type": "string"
                },
                "Password": {
                  "type": "string"
                },
                "DisplayName": {
                  "type": "string"
                },
                "Host": {
                  "type": "string"
                },
                "Port": {
                  "type": "integer"
                },
                "EnableSSL": {
                  "type": "boolean"
                }
              },
              "required": [
                "Email",
                "Password",
                "DisplayName",
                "Host",
                "Port",
                "EnableSSL"
              ]
            },
            "SMS": {
              "type": "object",
              "properties": {
                "Twilio": {
                  "type": "object",
                  "properties": {
                    "AccountSID": {
                      "type": "string"
                    },
                    "AuthToken": {
                      "type": "string"
                    },
                    "PhoneNumber": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "AccountSID",
                    "AuthToken",
                    "PhoneNumber"
                  ]
                }
              }
            }
          }
        },
        "General": {
          "type": "object",
          "properties": {
            "Frontend": {
              "type": "object",
              "properties": {
                "Clients": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": "object",
                      "properties": {
                        "Uri": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Uri"
                      ]
                    }
                  }
                }
              }
            },
            "DefaultValues": {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "string"
                }
              }
            }
          }
        },
        "Logging": {
          "type": "object",
          "properties": {
            "LogLevel": {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "Configuration"
  ]
}
