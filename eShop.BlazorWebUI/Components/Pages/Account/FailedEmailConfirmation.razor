@page "/account/failed-email-confirmation"

<PageTitle>Failed Email Confirmation</PageTitle>

<MudGrid Style="margin-top:10%" Justify="Justify.Center">
    <MudItem xs="12">
        <MudText Typo="Typo.h3" Align="Align.Center">
            Failed Email Address Confirmation <MudIcon Icon="@Icons.Material.Filled.Cancel" Size="Size.Large" Color="Color.Error" />
        </MudText>
        <MudText Typo="Typo.h4" Align="Align.Center">
            Unfortunately, the email confirmation token has expired or has invalid format.
        </MudText>
        <MudText Typo="Typo.h4" Align="Align.Center">
            Please go through the registration procedure one more time.
        </MudText>
        <MudText Typo="Typo.h4" Align="Align.Center">
            If the error occurs again, please contact: eshop.techhelp@gmail.com
        </MudText>
        <MudText Align="Align.Center" Typo="Typo.h4">
            Back to <MudLink Typo="Typo.h4" Href="/account/register">registration</MudLink> page.
        </MudText>

    </MudItem>
</MudGrid>
