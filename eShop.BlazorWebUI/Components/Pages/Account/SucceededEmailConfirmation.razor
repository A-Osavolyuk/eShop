@page "/account/confirmed-email"

<PageTitle>Email Confirmed</PageTitle>

<MudGrid Style="margin-top:10%" Justify="Justify.Center">
        <MudItem xs="12">
            <MudText Typo="Typo.h3" Align="Align.Center">
                Congratulation! <MudIcon Icon="@Icons.Material.Filled.TaskAlt" Size="Size.Large" Color="Color.Success" />
            </MudText>
            <MudText Typo="Typo.h4" Align="Align.Center">
                Your email address was successfully confirmed
            </MudText>
            <MudText Align="Align.Center" Typo="Typo.h4">
                You can now <MudLink Typo="Typo.h4" Href="/account/login">login</MudLink> to the application.
            </MudText>

        </MudItem>
</MudGrid>
