@inject NavigationManager NavigationManager

<MudStack>
    <MudButton ButtonType="ButtonType.Button" Color="Color.Primary" Size="Size.Large" Style="height: 80px"
               FullWidth OnClick="@(() => NavigationManager.NavigateTo("/profile", true))"
               Variant="@(IsProfilePage ? Variant.Filled : Variant.Outlined)" StartIcon="@Icons.Material.Filled.ManageAccounts">
        Profile
    </MudButton>

    <MudButton ButtonType="ButtonType.Button" Color="Color.Primary" Size="Size.Large" Style="height: 80px"
               FullWidth OnClick="@(() => NavigationManager.NavigateTo("/profile/user-data", true))"
               Variant="@(IsUserDataPage ? Variant.Filled : Variant.Outlined)" StartIcon="@Icons.Material.Filled.PrivacyTip">
        User Data
    </MudButton>

    <MudButton ButtonType="ButtonType.Button" Color="Color.Primary" Size="Size.Large" Style="height: 80px"
               FullWidth OnClick="@(() => NavigationManager.NavigateTo("/profile/security", true))"
               Variant="@(IsSecurityPage ? Variant.Filled : Variant.Outlined)" StartIcon="@Icons.Material.Filled.Security">
        Security
    </MudButton>

    <MudButton ButtonType="ButtonType.Button" Color="Color.Primary" Size="Size.Large" Style="height: 80px"
               FullWidth OnClick="@(() => NavigationManager.NavigateTo("/profile/settings", true))"
               Variant="@(IsSettingsPage ? Variant.Filled : Variant.Outlined)" StartIcon="@Icons.Material.Filled.Settings">
        Settings
    </MudButton>
</MudStack>

@code {
    [Parameter] public bool IsProfilePage { get; set; } = false;
    [Parameter] public bool IsUserDataPage { get; set; } = false;
    [Parameter] public bool IsSecurityPage { get; set; } = false;
    [Parameter] public bool IsSettingsPage { get; set; } = false;
}
