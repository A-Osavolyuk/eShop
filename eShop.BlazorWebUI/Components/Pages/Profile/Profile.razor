@page "/account/profile"

<PageTitle>Profile</PageTitle>

<AuthorizeView>
    <Authorized>
        <MudGrid Justify="Justify.Center">
            <MudItem md="12" sm="12" xs="12" lg="8">
                <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true">
                    <MudTabPanel Text="Main">
                        <MudGrid Class="my-2" Spacing="2">
                            <MudItem xs="12" sm="12" md="12">
                                <MudPaper Elevation="0" Class="pa-3">
                                    <MainData />
                                </MudPaper>
                            </MudItem>
                            <MudItem xs="12" sm="12" md="12">
                                <MudPaper Elevation="0" Class="pa-3">
                                    <ContactData />
                                </MudPaper>
                            </MudItem>
                            <MudItem xs="12" sm="12" md="12">
                                <MudPaper Elevation="0" Class="pa-3">
                                    <Security/>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </MudTabPanel>
                    <MudTabPanel Text="Settings">
                        <MudText>Content Disabled</MudText>
                    </MudTabPanel>
                </MudTabs>
            </MudItem>
        </MudGrid>
    </Authorized>
    <NotAuthorized>
        <AuthenticationManager />
    </NotAuthorized>
</AuthorizeView>