@inject IAuthenticationService AuthenticationService
@inject ISnackbar Snackbar
@inject IValidator<ChangePhoneNumberRequest> Validator
@inject ILocalDataAccessor LocalDataAccessor

<MudDialog>
    <DialogContent>
        <EditForm FormName="change-phone-number-form" Model="Model" OnValidSubmit="Submit">
            <FluentValidationValidator Validator="Validator" />
            <MudTextField Class="mb-3" @bind-Value=Model.PhoneNumber
                          For="(() => Model.PhoneNumber)" Variant="Variant.Outlined" Label="Phone number" />

            <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Submit</MudButton>
        </EditForm>
    </DialogContent>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    private ChangePhoneNumberRequest Model { get; set; } = new();

    private async Task Submit()
    {
        Model.Email = await LocalDataAccessor.GetEmailAsync();

        var result = await AuthenticationService.RequestChangePhoneNumberAsync(Model);

        if (result.IsSucceeded)
        {
            MudDialog.Close(DialogResult.Ok(true));
            Snackbar.Add(result.ResultMessage, MudBlazor.Severity.Success);
            Model = new();
        }
        else
        {
            Snackbar.Add(result.ErrorMessage, MudBlazor.Severity.Error);
            MudDialog.Close(DialogResult.Cancel());
        }
    }
    void Cancel() => MudDialog.Cancel();
}
