<MudSelect T="ProductSize" Label="Sizes" ShrinkLabel SelectAll MultiSelection Placeholder="Select sizes..." @bind-SelectedValues="Model.Sizes"
           Variant="Variant.Outlined" Immediate Required RequiredError="You have to pick at least one size">
    @foreach (var size in Enum.GetValues<ProductSize>().Where(x => x is not ProductSize.None))
    {
        <MudSelectItem T="ProductSize" Value="@size">
           @size
        </MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter] public CreateProductModel Model { get; set; } = new();
}
