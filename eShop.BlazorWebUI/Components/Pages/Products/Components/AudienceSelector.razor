<MudSelect T="Audience" Label="Audience" Immediate @bind-Value=Model.Audience Variant="Variant.Outlined" For="@(() => Model.Audience)">
    <MudSelectItem T="Audience" Disabled Value="Audience.None">None</MudSelectItem>
    @foreach (var audience in Enum.GetValues<Audience>().Where(_ => _ is not Audience.None))
    {
        <MudSelectItem T="Audience" Value="audience">@audience</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter] public CreateProductRequest Model { get; set; } = new();
}
