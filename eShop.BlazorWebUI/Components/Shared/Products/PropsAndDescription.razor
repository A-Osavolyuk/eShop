@if(Model is not null)
{
    <MudItem xs="12">
        <MudPaper Style="width:100% " Class="pa-5" Outlined>
            <MudGrid>
                <MudItem xs="12">
                    <MudText Typo="Typo.h6">Properties and description</MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudGrid Spacing="1">
                        <PropertyText Title="Brand" Text="@Model.Brand.Name" />
                        <PropertyText Title="Country producer" Text="@Model.Brand.Country" />

                        <MudItem xs="12">
                            <MudText Class="mb-3" Typo="Typo.subtitle1">Description</MudText>
                            <MudText Typo="Typo.subtitle2">@Model.Description</MudText>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
}

@code {
    [Parameter, NotNull] public ProductDto Model { get; set; } = new();
}
